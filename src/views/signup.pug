doctype html
html
  head
     link(rel="stylesheet", href="/styles/main.css")
     title= "Audiophiles Welcome"
     script.
      function handleSubmit(event) {
        event.preventDefault();
        const formData = {
          username: document.getElementById('username').value,
          email: document.getElementById('email').value,
          password: document.getElementById('password').value
        };
        fetch('/api/users', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(formData)
        })
        .then(response => {
          if (!response.ok) {
            throw new Error('Network response was not ok');
          }
          return response.json();
        })
        .then(data => {
          console.log('Success:', data);
          window.location.href = '/userhome';
        })
        .catch(error => {
          console.error('Error:', error);
        });
      }
  body(style="background-color: navy; color: white;")
    h1(style="text-align: center")= title
    p!= content
    .image-container
      a(href="/studio")
        img(src="/images/instrument.jpg", alt="studio Equipment page")
      a(href="/instruments")
        img(src="/images/studioequipment.jpg", alt="Instrument page")
    form(style="text-align: center",id="signupForm", onsubmit="handleSubmit(event)")
      label(for="username") Username:
      input(type="text", id="username", name="username", required)
      br
      label(for="email") Email:
      input(type="email", id="email", name="email", required)
      br
      label(for="password") Password:
      input(type="password", id="password", name="password", required)
      br
      button(type="submit") Submit
